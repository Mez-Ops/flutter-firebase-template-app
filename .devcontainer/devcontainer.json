{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.schema.json",
  "name": "Flutter",
  "image": "cirrusci/flutter:stable",
  // "containerUser": "developer",
  "secrets": {
    "FIREBASE_SERVICE_ACCOUNT": {
      "description": "The service account JSON to auth your Firebase project. \nEnsure the service account has Firebase Admin and Cloud Functions Admin.",
      "documentationUrl": "https://cloud.google.com/iam/docs/service-accounts-create"
    }
  },
  "features": {
    "ghcr.io/meaningful-ooo/devcontainer-features/homebrew:2": {}
  },
  "onCreateCommand": {
    "install-firebase-cli": "brew install firebase-cli",
    "install-github-cli": "brew install gh"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "ms-azuretools.vscode-docker",
        "chflick.firecode",
        "toba.vsfire",
        "github.copilot",
        "github.copilot-chat",
        "figma.figma-vscode-extension",
        "ms-vscode-remote.remote-containers",
        "circlecodesolution.ccs-flutter-color",
        "github.codespaces",
        "romanrei.material-dark",
        "redhat.vscode-yaml"
      ]
    }
  }
}