{
    "name": "mezops-flutter-firebase-container",
    "image": "tylerpjewell/mezops-flutter-firebase-image",
    "postStartCommand": "firebase emulators:start --only firestore,ui &",
    "containerEnv": {
        "GOOGLE_APPLICATION_CREDENTIALS": "service-account-key.json"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dart-code.dart-code",
                "dart-code.flutter",
                "ms-azuretools.vscode-docker",
                "github.copilot",
                "github.copilot-chat"
            ]
        }
    },
    "forwardPorts": [
        4000,
        4400,
        4500,
        5002,
        8080,
        9150
    ],
    "portsAttributes": {
        "4000": {
            "label": "Firebase Emulators UI",
            "onAutoForward": "openPreview"
        },
        "4400": {
            "label": "Firebase Emulator Hub"
        },
        "4500": {
            "label": "Firebase Logging"
        },
        "5002": {
            "label": "Firebase Hosting"
        },
        "8080": {
            "label": "Firebase Firestore"
        },
        "9150": {
            "label": "Firebase Firestore Websocket"
        }
    }
}