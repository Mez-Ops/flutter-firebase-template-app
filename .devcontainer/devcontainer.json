{
	"name": "Flutter Code Space Container",
	"image": "ghcr.io/cirruslabs/flutter",
	"postStartCommand": "apt-get update -y && brew bundle install --file .devcontainer/Brewfile && flutter precache && flutter doctor &",
	"features": {
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "libgtk-3-dev clang cmake ninja-build pkg-config git"
		},
		"ghcr.io/meaningful-ooo/devcontainer-features/homebrew:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dart-code.flutter",
				"ms-python.python",
				// "ms-python.vscode-pylance",
				// "ms-python.pylint",
				"ms-azuretools.vscode-docker",
				"chflick.firecode",
				// "toba.vsfire",
				"github.copilot",
				// "github.copilot-chat",
				// "figma.figma-vscode-extension",
				"ms-vscode-remote.remote-containers",
				"circlecodesolution.ccs-flutter-color",
				// "github.codespaces",
				"romanrei.material-dark",
				"redhat.vscode-yaml"
			]
		}
	}
}